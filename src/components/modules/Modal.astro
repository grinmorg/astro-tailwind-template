---
interface Props {
    type?: "mobile";
    id?: string;
    isLogo?: boolean;
    title?: string;
    titleClass?: string;
    closeClass?: string;
    closeAriaLabel?: string;
    class?: string;
    [x: string]: any;
}

const {
	type,
	id,
	isLogo,
	title,
	titleClass,
	closeClass,
    closeAriaLabel = 'Закрыть модальное окно',
    class: className,
    ...rest
} = Astro.props;

---
<div class:list={[
			'modal', 
			{'modal-mobile': type === 'mobile'}, 
			className
		]}
		id={id} 
		aria-hidden="true" 
		data-modal
		tabindex="-1"
		{...rest}
	>
	<div class="modal__wrap">
		<div class="modal__window" role="dialog" aria-modal="true" data-modal-window>
			{isLogo ?
				<div class="modal__logo-box">
					<a href="/" class="modal__logo logo">
						<img class="logo__img" src="img/logo.svg" width="71" height="73" alt="" />
					</a>
				</div> : ''}
			<div class="modal__inner">
				<div class="modal__content">
					{title ? <div class:list={['modal__title', titleClass]} set:html={title}></div> : ''}
					<slot/>
				</div>
			</div>
			<button type="button" class:list={['modal__close', closeClass]} title={closeAriaLabel} aria-label={closeAriaLabel} data-modal-close>
				<svg class="modal__close-icon" width="24" height="24" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
					<path fill-rule="evenodd" clip-rule="evenodd" d="M19.5455 4.4545C19.9848 4.89384 19.9848 5.60616 19.5455 6.0455L6.0455 19.5455C5.60616 19.9848 4.89384 19.9848 4.4545 19.5455C4.01517 19.1062 4.01517 18.3938 4.4545 17.9545L17.9545 4.4545C18.3938 4.01517 19.1062 4.01517 19.5455 4.4545Z" />
					<path fill-rule="evenodd" clip-rule="evenodd" d="M4.4545 4.4545C4.89384 4.01517 5.60616 4.01517 6.0455 4.4545L19.5455 17.9545C19.9848 18.3938 19.9848 19.1062 19.5455 19.5455C19.1062 19.9848 18.3938 19.9848 17.9545 19.5455L4.4545 6.0455C4.01517 5.60616 4.01517 4.89384 4.4545 4.4545Z"/>
				</svg>
			</button>
		</div>
	</div>
</div>
