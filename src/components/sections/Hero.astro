<section class='relative pt-44'>
  <div class='container'>
    <div
      class='grid lg:grid-cols-7 grid-cols-1 gap-16 items-center'>
      <div
        class='lg:col-span-3 order-2 lg:order-1 text-center sm:text-start'>
        <h1
          class='text-3xl/tight sm:text-4xl/tight lg:text-5xl/tight font-semibold mb-7'>
          Fast HTML coding with
          <span
            class='relative z-0 after:bg-yellow-200 after:-z-10 after:absolute after:h-6 after:w-full after:bottom-0 after:end-0'
            >Astro Gulp</span
          >
        </h1>
        <p class='text-gray-500'>
          Astro Build / Tailwind /
          TypeScript / Gulp
        </p>
        <div class='flex gap-4 mt-16'>
          <button
            class='flex items-center'>
            <a
              href='https://github.com/grinmorg/astro-tailwind-template'
              target='_blank'
              class='bg-primary text-white rounded-md hover:shadow-lg hover:shadow-primary/30 focus:shadow-none focus:outline focus:outline-primary/40 transition-all duration-500 py-2 px-4'
              >Okay, lets go</a
            >
          </button>
          <button
            class='flex items-center'>
            <a
              href='#'
              data-modal-open='#modal_test'
              class='border border-primary text-primary rounded-md hover:bg-primary hover:text-white hover:shadow-lg hover:shadow-primary/30 focus:shadow-none focus:outline focus:outline-primary/40 transition-all duration-500 py-2 px-4'
              >Modal component</a
            >
          </button>
        </div>
      </div>

      <div
        class='lg:col-span-4 order-1 lg:order-2 aos-init'
        data-aos='fade-left'
        data-aos-duration='1000'>
        <div>
          <img
            src='./img/startup1.svg'
            alt='startup1-img'
            data-aos='fade-left'
            data-aos-duration='1000'
            class='aos-init'
          />
        </div>
      </div>
    </div>
  </div>
</section>
